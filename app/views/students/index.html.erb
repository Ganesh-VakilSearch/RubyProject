<!DOCTYPE html>
<html>
<head>
  <title>Listing Students</title>
 <%= link_to 'New Student', new_student_path, class: 'btn btn-primary' %>
<%= link_to 'Invite Friends', '/invite', class: 'btn btn-success' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <style>
    body {
      background-color: orange;
    }

    h1 {
        color: skyblue;
        text-align: center;
        padding: 10px;
    }

     table {
        border: 1px solid blue;
    }

        tr,td,tbody {
        border: 1px solid blue;
    }

     thead {
        border: 1px solid blue;
    }
    
  </style>
</head>

<body>
  <div class="container">
    <h1 class="text-center">Listing Students</h1>
<div class="text-center">
  <div class="btn-group">
    <%= form_tag students_path, method: :get do %>
      <%= text_field_tag :regno, params[:regno], placeholder: "Search by Regno" %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="btn-group">
    <%= form_tag students_path, method: :get do %>
      <%= text_field_tag :name, params[:name], placeholder: "Search by Name" %>
      <%= submit_tag "Search", class: "btn btn-info" %>
    <% end %>
  </div>

  <div class="btn-group">
    <%= form_tag students_path, method: :get do %>
      <%= text_field_tag :dept, params[:dept], placeholder: "Search by Department" %>
      <%= submit_tag "Search", class: "btn btn-success" %>
    <% end %>
    
  </div>

  
<div>
  <%= link_to 'Display All Students', students_path, class: 'btn btn-danger' %>
   

  
</div>
</div>



    <div class="text-center">
      <table class="table" border="1">
        <thead>
          <tr>
            <th>Name</th> 
            <th>Regno</th>
            <th>Email</th>
            <th>Phonenumber</th>
            <th>dept</th>
            <th>date_of_birth</th>
            <th colspan="3">Action</th>
          </tr>
        </thead>
        
        <tbody>
          <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.regno %></td>
            <td><%= student.email %></td>
            <td><%= student.phonenumber %></td>
            <td><%= student.dept %></td>
            <td><%= student.date_of_birth %></td>
<td><%= link_to 'View' , student,class: 'btn btn-success' %></td>
<td><%= link_to 'Edit' , edit_student_path(student) ,class: 'btn btn-info' %></td>
<td><%= button_to student_path(student), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', remote: true do %>
  Delete
<% end %>
</td>




          </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @students %>
    </div>
  </div>

  
</body>
</html>
