</body>
<div class="container-fluid bg-warning d-flex justify-content-center align-items-center" style="height:100vh;">
  <div class="card p-4">
    <h4 class="mb-4">Send Invitation</h4>
    <%= form_tag invite_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :friend_email %>
        <%= email_field_tag :friend_email, nil, class: 'form-control' %>
      </div>
      <%= submit_tag 'Send Invitation', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
</body>